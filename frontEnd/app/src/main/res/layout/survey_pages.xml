<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/survey_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:background="@color/VolPoll_Red">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/logo1"
            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/survey_page_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/baseline_menu_24" />
        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/detail_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/baseline_person_24"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fieldGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="Field"
                android:paddingStart="20dp"
                android:textColor="@color/VolPoll_Blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/VolPoll_Blue"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                android:lineSpacingMultiplier="1.15"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="description"
                android:paddingHorizontal="15dp"
                android:textColor="@color/VolPoll_Blue"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <RadioButton
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Disagree"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/radio_button_selector"
                    android:button="@null"
                    />

                <RadioButton
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disagree"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/radio_button_selector"
                    android:button="@null"
                    />

                <RadioButton
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Neutral"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/radio_button_selector"
                    android:button="@null"
                    />

                <RadioButton
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agree"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/radio_button_selector"
                    android:button="@null"
                    />

                <RadioButton
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Agree"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/radio_button_selector"
                    android:button="@null"
                    />

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="60dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/previousButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Previous"
                    android:backgroundTint="@color/VolPoll_Red" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/VolPoll_Red" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>