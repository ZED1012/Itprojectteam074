<?xml version="1.0" encoding="utf-8"?>

<!-- need to add toolbar on the top -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/viaEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For further information, please contact Sara Sterling via email info@volunteeringvictoria.org.au. Alternatively, fill out the form below."
        android:layout_below="@id/title"
        android:textSize="20sp"
        android:autoLink="email"
        android:textColorLink="#CC2D43"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Name (required)"
        android:layout_below="@+id/viaEmail"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/your_name"
        />

    <TextView
        android:id="@+id/your_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Email (required)"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/your_email"
        />
    <TextView
        android:id="@+id/your_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />
    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/your_subject"
        />

    <TextView
        android:id="@+id/your_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your message"
        android:layout_below="@+id/subject"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/your_msg"
        android:lines="4"
        android:maxLines="10"
        android:inputType="textMultiLine"
        />
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="Send"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message"
        android:padding="0dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>