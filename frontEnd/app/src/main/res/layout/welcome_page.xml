<?xml version="1.0" encoding="utf-8"?><!--3.背景图片 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:scaleType="center">

    <!--android:background="@mipmap/welcomepage_background"-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/page1_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/VolPoll_Red">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/logo1"

            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/page1_menu_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/baseline_menu_24" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shutterstock"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/page1_text"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/page_one"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                />

            <Button
                android:id="@+id/page1_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:minWidth="25sp"
                android:minHeight="25sp"
                android:text="Take Survey!"
                android:backgroundTint="@color/VolPoll_Red"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>